{
  "crons": [
    {
      "path": "/api/cron/discover",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/enrich-tools",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/publish-drafts",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/email/send-newsletter",
      "schedule": "0 12 * * 5"
    },
    {
      "path": "/api/cron/generate-content",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/auto-curate",
      "schedule": "0 16 * * 1"
    },
    {
      "path": "/api/cron/check-affiliates",
      "schedule": "0 3 * * 0"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots"
    }
  ]
}
