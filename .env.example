# ============================================
# ToolForge AI - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values

# ============================================
# Supabase Configuration (Required)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# App Configuration
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: https://toolforge.ai
NEXT_PUBLIC_SITE_NAME=ToolForge AI

# ============================================
# Cron Job Security (Required for Production)
# ============================================
# Generate a random secret: openssl rand -base64 32
CRON_SECRET=your-random-secret-here

# ============================================
# Email Configuration (Optional but Recommended)
# ============================================
# For Gmail, use app-specific password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@toolforge.ai

# Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# Auto-Publishing Configuration
# ============================================
# Number of days before auto-publishing draft tools
AUTO_PUBLISH_DAYS=7

# ============================================
# NextAuth Configuration (Required for User Auth)
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Resend (Magic Link Email)
RESEND_API_KEY=re_your_resend_api_key

# Admin password for simple auth
ADMIN_PASSWORD=change_this_to_secure_password

# Owner password for financial dashboard (MUST be different from admin)
OWNER_PASSWORD=change_this_to_different_secure_password

# ============================================
# Stripe Configuration (Required for payments)
# ============================================
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_VAULT_WEBHOOK_SECRET=whsec_...

# Stripe Subscription Price IDs (Required for memberships)
STRIPE_MONTHLY_PRICE_ID=price_...
STRIPE_YEARLY_PRICE_ID=price_...

# ============================================
# OpenAI Configuration (Optional - for AI-enhanced content)
# ============================================
# If set, will use AI for enhanced content generation
# If not set, will use template-based generation
OPENAI_API_KEY=sk-proj-...

# ============================================
# Analytics (Optional)
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Scraper Configuration (Optional)
# ============================================
# Enable/disable specific scrapers
SCRAPER_FUTUREPEDIA_ENABLED=true
SCRAPER_THEREISANAIFORTHAT_ENABLED=true
SCRAPER_PRODUCTHUNT_ENABLED=true

# Rate limiting (requests per minute)
SCRAPER_RATE_LIMIT=30
